<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:background="#E5E5E5"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipChildren="false">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.53"
            app:srcCompat="@drawable/bottomnav" />

        <Button
            android:id="@+id/container_button"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginStart="38dp"
            android:layout_marginTop="162dp"
            android:background="@drawable/round_button"
            android:text="1"
            android:textColor="#FFFFFF"
            android:textSize="10sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/imageView2" />

        <Button
            android:id="@+id/inactive_icon_button"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginStart="135dp"
            android:layout_marginTop="120dp"
            android:background="@drawable/round_button"
            android:text="2"
            android:textColor="#FFFFFF"
            android:textSize="10sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/imageView2" />

        <Button
            android:id="@+id/inactive_text_button"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginStart="158dp"
            android:layout_marginTop="120dp"
            android:background="@drawable/round_button"
            android:text="3"
            android:textColor="#FFFCFC"
            android:textSize="10sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/imageView2" />

        <Button
            android:id="@+id/active_icon_button"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginStart="54dp"
            android:layout_marginTop="120dp"
            android:background="@drawable/round_button"
            android:text="4"
            android:textColor="#FFFFFF"
            android:textSize="10sp"
            app:layout_constraintStart_toEndOf="@+id/inactive_text_button"
            app:layout_constraintTop_toTopOf="@+id/imageView2" />

        <Button
            android:id="@+id/active_text_button"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="120dp"
            android:background="@drawable/round_button"
            android:text="5"
            android:textColor="#FFFFFF"
            android:textSize="10sp"
            app:layout_constraintStart_toEndOf="@+id/active_icon_button"
            app:layout_constraintTop_toTopOf="@+id/imageView2" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>